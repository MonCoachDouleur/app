<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArthsAppProject.Views.ConfirmADD"
             BackgroundImage="ArthImage.jpg">
    <ContentPage.Content>
        <StackLayout
			Orientation="Vertical"
			Padding="10"
			Spacing="30">
            <BoxView
				HeightRequest="10" />
            <Image
				HorizontalOptions="Center"
				WidthRequest="300"
				Source="Arth.png" />
            <StackLayout
					Orientation="Vertical"
					Spacing="10">
                <Label Text="Vos informations ont bien été enregistrées" VerticalOptions="Center" HorizontalOptions="Center" FontSize="Medium" TextColor="White"/>
                <Label Text="Veuillez vous connecter" VerticalOptions="Center" HorizontalOptions="Center" FontSize="Medium" TextColor="White"/>
            </StackLayout>
            <Button
				x:Name="LoginButton"
				Text="Connexion"
				TextColor="White"
                Margin="50"
				FontAttributes="Bold"
				FontSize="Medium"
				HorizontalOptions="FillAndExpand"
				BackgroundColor="CornflowerBlue" 
                Command="{Binding Path=NavigateCommand}" 
                CommandParameter="Login"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
